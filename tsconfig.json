{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "jsx": "preserve",
		"strictNullChecks": true,
        "noUnusedLocals": true,
        "baseUrl": "src"
    },
    "exclude": [
        "node_modules",
		"dist",
		"./src/**/*.d.ts"
    ],
    "filesGlob": [
		"./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}


